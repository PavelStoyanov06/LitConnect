@using LitConnect.Web.ViewModels.BookClub
@model AddBookViewModel

@{
    ViewData["Title"] = "Add Book";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Book Clubs</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.BookClubId">Back to Club</a></li>
            <li class="breadcrumb-item active">Add Book</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Add Book to Club</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AddBook" method="post">
                        <input type="hidden" asp-for="BookClubId" />

                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label">Book</label>
                            <select asp-for="BookId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Books, "Id", "Title"))">
                                <option value="">-- Select Book --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsCurrentlyReading" class="form-check-input" type="checkbox" />
                                <label asp-for="IsCurrentlyReading" class="form-check-label">Set as Currently Reading</label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Book</button>
                            <a asp-action="Details" asp-route-id="@Model.BookClubId"
                               class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}