@{
    ViewData["Title"] = "Welcome";
}

<div class="hero-section text-center py-5">
    <h1 class="display-4 mb-4">Welcome to LitConnect</h1>
    <p class="lead mb-4">Connect with fellow readers, join book clubs, and share your literary journey.</p>
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div class="d-flex justify-content-center gap-3">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">Join Now</a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg">Sign In</a>
        </div>
    }
</div>

<div class="features-section py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="feature-card p-4">
                <i class="fas fa-book-reader fa-3x mb-3 text-primary"></i>
                <h3>Join Book Clubs</h3>
                <p>Connect with readers who share your interests and discover new perspectives.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card p-4">
                <i class="fas fa-comments fa-3x mb-3 text-primary"></i>
                <h3>Engage in Discussions</h3>
                <p>Share your thoughts and participate in meaningful literary discussions.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card p-4">
                <i class="fas fa-list-alt fa-3x mb-3 text-primary"></i>
                <h3>Track Your Reading</h3>
                <p>Keep track of your reading progress and manage your personal reading list.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background-color: #f8f9fa;
        padding: 60px 0;
        border-radius: 10px;
        margin-bottom: 40px;
    }

    .feature-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        height: 100%;
        transition: transform 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
        }
</style>