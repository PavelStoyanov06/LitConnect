@using LitConnect.Web.ViewModels.Meeting
@model MeetingCreateViewModel

@{
    ViewData["Title"] = "Schedule Meeting";
}

<div class="container mt-4">
    <div class="back-button-container">
        <a asp-controller="BookClub" asp-action="Details" asp-route-id="@Model.BookClubId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Club
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Schedule a New Meeting</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="BookClubId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ScheduledDate" class="form-label">Date and Time</label>
                            <div class="row">
                                <div class="col">
                                    <input asp-for="ScheduledDate"
                                           class="form-control"
                                           type="datetime-local"
                                           asp-format="{0:yyyy-MM-dd HH:mm}"
                                           step="60" />
                                </div>
                            </div>
                            <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                            <small class="form-text text-muted">Select date and time (hours and minutes)</small>
                        </div>


                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label">Book (Optional)</label>
                            <select asp-for="BookId" class="form-select" asp-items="@(new SelectList(ViewBag.Books, "Id", "Title"))">
                                <option value="">-- Select Book --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Schedule Meeting</button>
                            <a asp-controller="BookClub" asp-action="Details" asp-route-id="@Model.BookClubId"
                               class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}